-- SqlCe
DECLARE @take Int -- Int32
SET     @take = 1

SELECT
	[o].[ParentID],
	[o].[Value1],
	[t1].[ChildID],
	[t1].[ParentID]
FROM
	[Parent] [o]
		OUTER APPLY (
			SELECT TOP (@take)
				[x].[ChildID],
				[x].[ParentID]
			FROM
				[Child] [x]
			WHERE
				[x].[ParentID] = [o].[ParentID]
		) [t1]

