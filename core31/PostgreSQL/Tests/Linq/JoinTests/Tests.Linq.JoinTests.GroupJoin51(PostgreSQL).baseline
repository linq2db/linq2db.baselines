SELECT
	p."ParentID",
	p."Value1",
	t1."ChildID",
	t1."ParentID"
FROM
	"Parent" p
		LEFT JOIN LATERAL (
			SELECT
				ch."ChildID",
				ch."ParentID"
			FROM
				"Child" ch
			WHERE
				ch."ParentID" = p."ParentID"
			ORDER BY
				ch."ChildID" DESC
			LIMIT :take
		) t1 ON 1=1
