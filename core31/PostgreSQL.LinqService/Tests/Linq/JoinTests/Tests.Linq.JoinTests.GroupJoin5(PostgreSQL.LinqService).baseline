-- PostgreSQL PostgreSQL.9.5 PostgreSQL
DECLARE @take Integer -- Int32
SET     @take = 1

SELECT
	t1."ChildID",
	t1."ParentID"
FROM
	"Parent" p
		LEFT JOIN LATERAL (
			SELECT
				ch."ChildID",
				ch."ParentID"
			FROM
				"Child" ch
			WHERE
				ch."ParentID" = p."ParentID"
			ORDER BY
				ch."ChildID"
			LIMIT :take
		) t1 ON 1=1
WHERE
	p."ParentID" >= 1
ORDER BY
	p."ParentID"

