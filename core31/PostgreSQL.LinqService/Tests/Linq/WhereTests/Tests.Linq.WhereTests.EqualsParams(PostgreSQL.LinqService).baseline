-- PostgreSQL PostgreSQL.9.5 PostgreSQL
DECLARE @id Integer -- Int32
SET     @id = 1
DECLARE @name Text(4) -- String
SET     @name = 'John'

SELECT
	p."FirstName",
	p."Gender",
	p."PersonID",
	p."LastName",
	p."MiddleName"
FROM
	"Person" p
WHERE
	p."PersonID" = :id AND p."FirstName" = :name

