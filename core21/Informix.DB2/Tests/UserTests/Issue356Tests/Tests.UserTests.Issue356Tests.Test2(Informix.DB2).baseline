SELECT FIRST 10
	cp.ParentID,
	c_1.ChildID
FROM
	Parent cp
		INNER JOIN (
			SELECT FIRST 10
				t3.ParentID,
				t3.ChildID
			FROM
				(
					SELECT
						t1.ChildID,
						t1.ParentID
					FROM
						Child t1
					UNION
					SELECT
						t2.ChildID,
						t2.ParentID
					FROM
						Child t2
				) t3
			ORDER BY
				t3.ParentID
		) c_1 ON 1=1
WHERE
	c_1.ParentID = cp.ParentID
ORDER BY
	cp.ParentID

