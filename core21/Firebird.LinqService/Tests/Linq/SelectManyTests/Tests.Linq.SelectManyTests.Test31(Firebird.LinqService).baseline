-- Firebird

SELECT
	"p_1"."FirstName",
	"p_1"."Gender",
	"p_1"."PersonID",
	"p_1"."LastName",
	"p_1"."MiddleName"
FROM
	(
		SELECT
			"p"."PersonID" + 1 as ID,
			"p"."FirstName",
			"p"."Gender",
			"p"."PersonID",
			"p"."LastName",
			"p"."MiddleName"
		FROM
			"Person" "p"
		WHERE
			"p"."PersonID" = 1
	) "p_1"
WHERE
	"p_1".ID + 1 = 3 AND "p_1".ID = 2

