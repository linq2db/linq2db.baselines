-- Firebird
DECLARE @str VarChar(7) -- String
SET     @str = 'John123'

SELECT
	"p"."FirstName",
	"p"."Gender",
	"p"."PersonID",
	"p"."LastName",
	"p"."MiddleName"
FROM
	"Person" "p"
WHERE
	@str LIKE (Replace(Replace(Replace("p"."FirstName", '~', '~~'), '%', '~%'), '_', '~_') || '%') ESCAPE '~'

