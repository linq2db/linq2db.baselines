DECLARE @take Int32
SET     @take = 10

SELECT
	`cp`.`ParentID`,
	`c_1`.`ChildID`
FROM
	`Parent` `cp`
		CROSS JOIN (
			SELECT DISTINCT
				`t3`.`ChildID`,
				`t3`.`ParentID`
			FROM
				(
					SELECT
						`t1`.`ChildID`,
						`t1`.`ParentID`
					FROM
						`Child` `t1`
					UNION
					SELECT
						`t2`.`ChildID`,
						`t2`.`ParentID`
					FROM
						`Child` `t2`
				) `t3`
		) `c_1`
WHERE
	`c_1`.`ParentID` = `cp`.`ParentID`
ORDER BY
	`cp`.`ParentID`,
	`c_1`.`ChildID`
LIMIT @take

