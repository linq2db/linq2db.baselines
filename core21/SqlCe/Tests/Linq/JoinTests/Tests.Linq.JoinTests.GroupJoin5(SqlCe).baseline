-- SqlCe
DECLARE @take Int -- Int32
SET     @take = 1

SELECT
	[t1].[ChildID],
	[t1].[ParentID]
FROM
	[Parent] [p]
		OUTER APPLY (
			SELECT TOP (@take)
				[ch].[ChildID],
				[ch].[ParentID]
			FROM
				[Child] [ch]
			WHERE
				[ch].[ParentID] = [p].[ParentID]
			ORDER BY
				[ch].[ChildID]
		) [t1]
WHERE
	[p].[ParentID] >= 1
ORDER BY
	[p].[ParentID]

