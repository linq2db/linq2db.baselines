-- SqlCe
DECLARE @take Int -- Int32
SET     @take = 1

SELECT
	[t2].[ChildID],
	[t2].[ParentID]
FROM
	[Parent] [p]
		OUTER APPLY (
			SELECT TOP (@take)
				[t1].[ChildID],
				[t1].[ParentID]
			FROM
				[Child] [t1]
			WHERE
				[p].[ParentID] = [t1].[ParentID]
			ORDER BY
				[t1].[ChildID]
		) [t2]

