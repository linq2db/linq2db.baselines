-- SqlCe
DECLARE @take Int -- Int32
SET     @take = 1

SELECT
	[o].[ParentID],
	[o].[Value1],
	[t1].[ChildID],
	[t1].[ParentID]
FROM
	[Parent] [o]
		CROSS APPLY (
			SELECT TOP (@take)
				[cg].[ParentID],
				[cg].[ChildID]
			FROM
				[Child] [cg]
			WHERE
				[o].[ParentID] = [cg].[ParentID]
		) [t1]

