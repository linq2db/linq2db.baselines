MERGE INTO "Person" "Target"
USING (
	SELECT CAST(NULL AS Int), CAST(NULL AS NVarChar(255)), CAST(NULL AS Char(1)), CAST(NULL AS NVarChar(255)), CAST(NULL AS NVarChar(255))
	FROM "Person"	WHERE 1 = 0
)
 "Source"
(
	ID, 
	"FirstName", 
	"Gender", 
	"LastName", 
	"MiddleName"
)
ON ("Target"."PersonID" = "Source".ID)

WHEN MATCHED THEN
UPDATE
SET
	"Target"."FirstName" = "Source"."FirstName",
	"Target"."Gender" = "Source"."Gender",
	"Target"."LastName" = "Source"."LastName",
	"Target"."MiddleName" = "Source"."MiddleName"

WHEN NOT MATCHED THEN
INSERT
(
	"FirstName",
	"Gender",
	"LastName",
	"MiddleName"
)
VALUES
(
	"Source"."FirstName",
	"Source"."Gender",
	"Source"."LastName",
	"Source"."MiddleName"
)

